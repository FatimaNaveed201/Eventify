<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/nav_pfp"
        android:layout_width="208dp"
        android:layout_height="181dp"
        android:src="@drawable/whitebg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />


    <TextView
        android:id="@+id/nav_admin_name"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:fontFamily="@font/nexa_script_trial_regular"
        android:paddingTop="8dp"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/light_yellow"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_pfp"
        app:layout_constraintVertical_bias="0.066" />

    <ImageButton
        android:id="@+id/nav_reset_changes"
        android:layout_width="277dp"
        android:layout_height="109dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Recent Changes"
        android:scaleType="centerCrop"
        android:src="@drawable/resetchanges"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_admin_name"
        app:layout_constraintVertical_bias="0.177" />

    <ImageButton
        android:id="@+id/nav_logout"
        android:layout_width="277dp"
        android:layout_height="109dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Logout"
        android:scaleType="centerCrop"
        android:src="@drawable/logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_reset_changes"
        app:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="281dp"
        android:layout_height="78dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/nexa_script_trial_regular"
        android:text="Developed By: \nFatima Naveed - CC Year 2 "
        android:textAlignment="center"
        android:textColor="@color/dark_maroon"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_logout"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
